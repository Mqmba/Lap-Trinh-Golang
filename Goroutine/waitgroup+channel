package main

import (
	"fmt"
	"sync"
	"time"
)

func task(id int, ch chan<- string, wg *sync.WaitGroup) {
	defer wg.Done()
	fmt.Printf("Task %d bắt đầu \n", id)
	time.Sleep(1 * time.Second)
	ch <- fmt.Sprintf("Task %d kết thúc \n", id)
	ch <- fmt.Sprintf("Ending Task %d \n", id)
	ch <- fmt.Sprintf("Ending Task %d \n", id)
	ch <- fmt.Sprintf("Ending Task %d \n", id)
}

func main() {

	start := time.Now()
	var wg sync.WaitGroup
	ch := make(chan string)

	for i := 1; i <= 4; i++ {
		wg.Add(1)
		go task(i, ch, &wg)
	}

	go func() {
		wg.Wait()
		close(ch)
	}()

	for value := range ch {
		fmt.Print(value)
	}
	fmt.Println("Tong thời gian hoàn thành: ", time.Since(start))
}
